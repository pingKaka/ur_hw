<launch>
    <!-- 声明参数（带默认值） -->
    <arg name="camera_image_topic" default="" />
    <arg name="camera_info_topic" default="" />
    <arg name="camera_gTc_flag" default="false" />

    <!-- 节点配置 -->
    <node name="location_service_node" pkg="locatornew" type="location_service.py" output="screen">
        <param name="camera_image_topic" type="string" value="$(arg camera_image_topic)" />
        <param name="camera_info_topic" type="string" value="$(arg camera_info_topic)" />
        <param name="camera_gTc_flag" type="bool" value="$(arg camera_gTc_flag)" />
    </node>
</launch>
